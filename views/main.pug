block variables
    - var serverTime = interceporTime
doctype html
html(lang='ru')
    head
        title Web
        meta(charset = 'UTF-8')
        meta(name = 'keywords' content = 'Страница, личная, визитка')
        meta(name = 'description' content = 'Сайт визитка')
        link(href='../../public/outlines.css' rel='stylesheet')
        block css
    body
        header.header
            .header__container
                a.header__logo(href="../../public/index.html")
                .header__menu
                    .menu__icon
                        span
                    nav.menu__body
                        ul.menu__list
                            li
                                a.menu__link(href = "./index.html" data-nav = "nav") Главная
                            li
                                a.menu__link(href = "./ToDoList.html" data-nav = "nav") Список дел
                            li
                                a.menu__link(href = "../../public/lab6.html" data-nav = "nav") Фетч
        block content
        if authorised
            p Вы авторизованы!
        else
            p Лучше авторизируйтесь!
        block footer
        block scripts